// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id       String @id @default(uuid())
    name     String
    email    String @unique
    password String

    @@map("users")
}

model Admin {
    id       String @id @default(uuid())
    name     String
    email    String @unique
    password String

    @@map("admins")
}

model Curso {
    id      String  @id @default(uuid())
    nome    String
    periodo String
    turno   Turno
    duracao String
    turma   Turma[]

    @@map("cursos")
}

enum Turno {
    MANHA
    TARDE
    NOITE
    INTEGRAL
}

model Turma {
    id      String @id @default(uuid())
    ano     String
    curso   Curso  @relation(fields: [cursoId], references: [id])
    cursoId String
}